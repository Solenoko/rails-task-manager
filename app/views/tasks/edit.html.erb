<!-- app/views/tasks/edit.html.erb -->

<div class="container mt-4">
  <h1>Edit Task</h1>

  <%= form_with model: @task, local: true, class: 'mt-3' do |form| %>
    <% if @task.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :details, class: 'form-label' %>
      <%= form.text_area :details, class: 'form-control' %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :completed, class: 'form-check-input' %>
      <%= form.label :completed, 'Completed', class: 'form-check-label' %>
    </div>

    <%= form.submit 'Update Task', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back to Task List', tasks_path, class: 'btn btn-secondary mt-3' %>
</div>
